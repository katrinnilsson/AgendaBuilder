<LinearLayout
    android:id="@+id/task_box_framelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_medium_text"
    tools:context="iprog.group7.agendabuilder.android.MainActivity$TaskFragment">



        <TextView
            android:id="@+id/task_start_time"
            android:text="08:00"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/task_box"
            android:text="Task"
            android:gravity="center"
            android:background="@color/blue"
            android:layout_gravity="end"
            android:layout_width="@dimen/activity_task_description_width"
            android:layout_height="match_parent" />


</LinearLayout>